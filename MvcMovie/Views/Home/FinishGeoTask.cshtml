@model MvcMovie.Models.GeoTask
 <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<div class = "container">
    <h2>Завершение задачи</h2>
    <form asp-action="FinishGeoTask" asp-controller="home" asp-route-id="@Model.Id">
        <p>
            <label asp-for="Note">Примечания</label><br />
            <input type="text" asp-for="Note" />
        </p>    
        <p>
            <label asp-for="DayEnd">День Окончания</label><br />
            <input type="date" asp-for="DayEnd" value="@DateTime.Now.ToString("yyyy-mm-dd")"/>
        </p>
        <p>
            <input type="submit" value="Отправить" />
        </p>
    </form>
</div>